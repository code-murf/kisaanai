# Agri-Analytics Platform - Environment Configuration
# =================================================
# Copy this file to .env and fill in the values

# ============================================
# Application Settings
# ============================================
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Database Configuration
# ============================================
DB_USER=agri_user
DB_PASSWORD=agri_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agri_analytics

# Full database URL (auto-constructed if not set)
# DATABASE_URL=postgresql+asyncpg://agri_user:agri_password@localhost:5432/agri_analytics

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ============================================
# Security Settings
# ============================================
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10

# ============================================
# Twilio Configuration (WhatsApp/Voice)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+14155238886

# ============================================
# Bhashini AI Configuration (Voice ASR/TTS)
# ============================================
BHASHINI_API_KEY=your-bhashini-api-key
BHASHINI_USER_ID=your-bhashini-user-id
BHASHINI_BASE_URL=https://bhashini.gov.in/api

# ============================================
# ML Model Settings
# ============================================
MODEL_PATH=./models
DATA_PATH=./data

# XGBoost settings
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1

# ============================================
# Prefect Orchestration
# ============================================
PREFECT_API_URL=http://localhost:4200/api

# ============================================
# External APIs
# ============================================
# Agmarknet (Mandi prices)
AGMARKNET_BASE_URL=https://agmarknet.gov.in
AGMARKNET_TIMEOUT=30

# OpenWeatherMap (for weather data)
OPENWEATHER_API_KEY=your-openweather-api-key

# ============================================
# Docker/Deployment
# ============================================
BUILD_TARGET=production
API_PORT=8000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE_QUERY=true
ENABLE_WHATSAPP_BOT=true
ENABLE_PRICE_ALERTS=true

# ============================================
# AI/ML Settings
# ============================================
# Groq API (AI chat completions)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Sarvam AI (Speech-to-Text/Text-to-Speech for Indian languages)
SARVAM_API_KEY=your_sarvam_api_key_here
SARVAM_STT_URL=https://api.sarvam.ai/speech-to-text/transcribe
SARVAM_TTS_URL=https://api.sarvam.ai/text-to-speech
